<project xmlns="http://maven.apache.org/POM/4.0.0">
<modelVersion>4.0.0</modelVersion>

<groupId>DeckTracker</groupId>
<artifactId>DeckTracker</artifactId>
<version>v1.0.0</version>
<packaging>jar</packaging>

<name>DeckTracker</name>
<description>Displays remaining cards in your draw deck</description>

<dependencies>
    <dependency>
        <groupId>com.megacrit.cardcrawl</groupId>
        <artifactId>slaythespire</artifactId>
        <version>016</version>
        <scope>system</scope>
        <systemPath>${basedir}/../lib/desktop-1.0.jar</systemPath>
    </dependency>
    <dependency>
        <groupId>basemod</groupId>
        <artifactId>basemod</artifactId>
        <version>2.10.0</version>
        <scope>system</scope>
        <systemPath>${basedir}/../lib/BaseMod.jar</systemPath>
    </dependency>
    <dependency>
        <groupId>com.evacipated.cardcrawl</groupId>
        <artifactId>ModTheSpire</artifactId>
        <version>2.6.0</version>
        <scope>system</scope>
        <systemPath>${basedir}/../lib/ModTheSpire.jar</systemPath>
    </dependency>
</dependencies>

<build>
    <finalName>DeckTracker</finalName>
    <plugins>
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-compiler-plugin</artifactId>
            <version>3.7.0</version>
            <configuration>
                <source>1.8</source>
                <target>1.8</target>
            </configuration>
        </plugin>
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-antrun-plugin</artifactId>
            <version>1.8</version>
            <executions>
                <execution>
                    <phase>package</phase>
                    <configuration>
                        <target>
                            <copy file="${project.basedir}/target/DeckTracker.jar" tofile="${project.basedir}/../../mods/DeckTracker.jar"/>
                        </target>
                    </configuration>
                    <goals>
                        <goal>run</goal>
                    </goals>
                </execution>
            </executions>
        </plugin>
    </plugins>
</build>
</project>